rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // suggestions koleksiyonu
    match /suggestions/{docId} {
      allow read: if true; // herkese açık okuma

      // yaratma için kullanıcı auth olmalı ve users koleksiyonundaki role 'contributor' veya admin olmalıdır
      allow create: if request.auth != null &&
        (
          request.auth.token.admin == true
          || get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'contributor'
        );

      // update/delete yalnızca belge sahibi veya admin olabilir
      allow update, delete: if request.auth != null &&
        (
          request.auth.uid == resource.data.createdBy
          || request.auth.token.admin == true
          || get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'admin'
        );
    }

    // users koleksiyonu: kullanıcılar kendi profillerini okuyup yazabilir; admin role güncellemesi için ekstra kısıtlama
    match /users/{userId} {
      allow read: if request.auth != null && (request.auth.uid == userId || request.auth.token.admin == true);
      allow create: if request.auth != null;
      allow update: if request.auth != null && (
        request.auth.uid == userId
        || request.auth.token.admin == true
      );
    }
  }
}
