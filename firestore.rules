rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // suggestions koleksiyonu
    match /suggestions/{docId} {
      allow read: if true; // herkese açık okuma

      // Authenticated users (including anonymous) can create suggestions
      allow create: if request.auth != null;

      // update/delete yalnızca belge sahibi veya admin olabilir
      allow update, delete: if request.auth != null &&
        (
          request.auth.uid == resource.data.createdBy
          || request.auth.token.admin == true
        );
    }

    // users koleksiyonu
    match /users/{userId} {
      allow read: if request.auth != null && (request.auth.uid == userId || request.auth.token.admin == true);
      allow create: if request.auth != null;
      allow update: if request.auth != null && (
        request.auth.uid == userId
        || request.auth.token.admin == true
      );
    }
  }
}
